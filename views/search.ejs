<h1>Search</h1>
<% if (allrecs.length > 0) {%>
    <table>
    <tr>
        <th> Item ID </th>
        <th> Item Name </th>
        <th> Category </th>
        <th> Type </th>
        <th> Size </th>
        <th> Price </th>
        <th> Status </th>
    </tr>

        <% allrecs.forEach((recref, index) => { %>
        <tr>
            <td><%= recref.item_id %></td>
            <td><%= recref.itemname %></td>
            <td><%= recref.category_id %></td>
            <td><%= recref.type_id %></td>
            <td><%= recref.size %></td>
            <td><%= recref.typeprice %></td>
            <td><%= recref.status %></td>
            <td><a href='/item/<%= recref.item_id %>/show'> Details</a></td>
        </tr>
        <% }); %>
    </table>
        <% } else { %>
            <p>No Records Available</p>
        <% } %>