<% if (allrecs.length > 0) {%>
    <table>
        <tr>
            <th> Item ID </th>
            <th> Item Name </th>
            <th> Category ID </th>
            <th> Brand ID </th>
            <th> Size </th>
            <th> Price </th>
            <th> Status </th>
            <th> Homepage </th>
        
        </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.item_id %></td>
                <td><%= recref.itemname %></td>
                <td><%= recref.category_id %></td>
                <td><%= recref.type_id %></td>
                <td><%= recref.size %></td>
                <td><%= Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(recref.typeprice) %></td>
                <td><%= recref.status %></td>
                <td><%= recref.homepage %></td>
                <td><a href='/item/<%= recref.item_id %>/show'>Details</a></td>
                <td><a href='/item/<%= recref.item_id%>/edit'>Edit</a></td>
                <td><a href='/item/<%= recref.item_id %>/delete'
                onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>

    <% } else { %>
        <p>No Records Available</p>
    <% } %>
<p> <a href='/item/addrecord'>Add New</a> </p>