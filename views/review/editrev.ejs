<h1> Edit Review </h1>
<form action="/review/save" method="post">
        <input type="hidden" name="review_id" value="<%=onerev.review_id%>" >
    
    <table>
        
        <tr> <td> Person ID: </td> <td> <input type="number" name="person_id" value="<%= onerev.person_id %>" required> </td> </tr>
        <tr> <td> Item ID: </td> <td> <input type="number" name="item_id" value="<%= onerev.item_id %>" required> </td> </tr>
        <tr> <td> Review Date: </td> <td> <input type="date" name="reviewdate" value="<%= onerev.reviewdate.toISOString().split('T')[0] %>" required> </td> </tr>
        <tr> <td> Comments: </td> <td> <textarea name="comments" rows="10" cols="30"><%= onerev.comments %></textarea> </td> </tr>
        <tr> <td> Rating: </td> <td> <input type="number" name="rating" value="<%= onerev.rating %>" required> </td> </tr>
        <tr> <td> Status: </td> <td> <input type="text" name="status" value="<%= onerev.status %>" required> </td> </tr>
                
        
    </table>
    
    <button type="submit">Save</button>
</form>