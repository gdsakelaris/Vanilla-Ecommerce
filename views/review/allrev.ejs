<% if (allreviews.length > 0) {%>
    <table>
        <tr>
            <th> Review ID </th>
            <th> Person ID </th>
            <th> Item ID </th>
            <th> Review Date </th>
            <th> Comments </th>
            <th> Rating </th>
            <th> Status </th>
        
        </tr>
        <% allreviews.forEach((revref, index) => { %>
            <tr>
                <td><%= revref.review_id %></td>
                <td><%= revref.person_id %></td>
                <td><%= revref.item_id %></td>
                <td><%= revref.reviewdate %></td>
                <td><%= revref.comments %></td>
                <td><%= revref.rating %></td>
                <td><%= revref.status %></td>
                <td><a href='/review/<%= revref.review_id %>/show'>Details</a></td>
                <td><a href='/review/<%= revref.review_id%>/edit'>Edit</a></td>
                <td><a href='/review/<%= revref.review_id %>/delete'
                onclick="return confirm('Are you sure you want to delete this review?');">Delete</a></td>
            </tr>
    <% }); %>
    </table>

    <% } else { %>
        <p>No Reviews Available</p>
    <% } %>
<p> <a href='/review/addreview'>Add New</a> </p>