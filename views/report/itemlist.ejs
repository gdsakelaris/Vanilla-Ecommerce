<% if (allrecs.length > 0) {%>
    <table>
        <tr>
            <th> Item ID </th>
            <th> Item Name </th>
            <th> Item Category </th>
            <th> Item Type </th>
            <th> Size </th>
            <th> Item Price </th>
            <th> Item Status </th>
        
        </tr>
        <% allrecs.forEach((recref, index) => { %>
            <tr>
                <td><%= recref.item_id %></td>
                <td><%= recref.itemname %></td>
                <td><%= recref.category_id %></td>
                <td><%= recref.type_id %></td>
                <td><%= recref.size %></td>
                <td><%= recref.typeprice %></td>
                <td><%= recref.status %></td>
                
            </tr>
    <% }); %>
    </table>

    <% } else { %>
        <p>No Records Available</p>
    <% } %>